    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background_main"
    tools:context="com.example.android.histogram.about_program">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Font_App_Styles"
        android:id="@+id/welcome_user_2"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/how_to_read_histogram"
        android:scaleType="fitXY"
        android:src="@drawable/histogram_read"
        android:layout_below="@+id/welcome_user_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

